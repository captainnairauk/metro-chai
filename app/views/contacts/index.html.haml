%section.panel
  = link_to 'home', root_path 
  
%section.panel
  .panel_heading position Listing
  .panel_body
    %table.table.table_border.table_stripped.order_table
      %thead
        %tr
          %th Sr. No.
          %th Name
          %th Email
          %th mobile Number
          %th City
          %th image
          %th Action
        - count = 1
      %tbody
        - @contacts.each do |contact|
          %tr
            %td= count
            - count = count + 1
            %td= contact.name
            %td= contact.email
            %td= contact.mobile_number
            %td= contact.city
            %td
              
              = link_to 'delete', contact_path(contact),method: :delete, data: {confirm:"Are you sure?"}